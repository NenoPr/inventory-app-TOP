extends ../layout

block content
  h1= title
  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#title.form-control(type='text', placeholder='Name of the genre' name='title' required='true' value=(undefined===genre ? '' : genre.name) )
    div.form-group
      label(for='founded') Founded:
      input#title.form-control(type='textarea', placeholder='Description...' name='title' value=(undefined===genre ? '' : genre.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg